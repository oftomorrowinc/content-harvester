extends layouts/main

block content
  header.app-header
    h1.app-title Content Harvester
    p.app-description Collect, categorize, and preprocess multi-source content
  
  main.content-harvester
    section.content-collection
      h2.section-title Content Collection
      
      div.url-input-container
        form#url-form(hx-post="/api/urls" hx-target="#content-table-container" hx-swap="innerHTML")
          textarea#url-input(
            name="urls" 
            placeholder="Paste URLs (e.g., https://example.com, https://another-site.com)"
          )
          button#add-urls-btn(type="submit") Add URLs
      
      div#content-table-container
        include partials/content-table
      
      div.action-container
        button#process-all-btn(hx-post="/api/process-all" hx-target="#content-table-container" hx-swap="innerHTML") Process All Content